
{
  "name": "Market Notes Haven",
  "short_name": "Notes Haven",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1A1D21",
  "theme_color": "#3B82F6",
  "description": "A comprehensive market notes tracking and management application",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "categories": ["productivity", "finance", "utilities"],
  "prefer_related_applications": false,
  "handle_links": "preferred",
  "shortcuts": [
    {
      "name": "New Note",
      "short_name": "New",
      "description": "Create a new market note",
      "url": "/notes/new",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your dashboard",
      "url": "/",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    }
  ],
  "theme_color_dark": "#1A1D21",
  "theme_color_light": "#FFFFFF",
  "id": "/",
  "orientation": "any",
  "dir": "auto",
  "lang": "en",
  "scope": "/",
  "display_override": ["standalone", "window-controls-overlay"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "capture_links": "existing_client_navigate",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/markdown": [".md"]
      }
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://marketnotes.lovable.app/manifest.json"
    }
  ]
}
